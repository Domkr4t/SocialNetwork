﻿@{
    ViewData["Title"] = "Аутентификация";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Аутентификация</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: "Roboto", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .btn {
            margin: 10px 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card text-center">
            <div class="card-body">
                <h5>Аутентификация</h5>
                <br />

                <form id="authForm">
                    <div class="mb-3">
                        <label for="authLogin" class="form-label">Логин:</label>
                        <input type="authLogin" class="form-control" id="authLogin" name="Login">
                    </div>
                    <div class="mb-3">
                        <label for="authPassword" class="form-label">Пароль:</label>
                        <input type="password" class="form-control" id="authPassword" name="Password">
                    </div>
                    <button id="authButton" type="submit" class="btn btn-success">Войти</button>
                    <p class="text-center mt-3">Нет аккаунта? <a href="/Auth/RegistrationPage" class="text-decoration-none">Создать аккаунт</a></p>
                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
